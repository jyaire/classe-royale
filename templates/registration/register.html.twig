{% extends 'base.html.twig' %}

{% block title %}Classe Royale - Création d'un compte{% endblock %}

{% block body %}
<div class="col-12 text-center pb-3">
    <h3>Création d'un compte</h3>
</div>
<div class="col-12 col-md-7 col-lg-5 text-center">
    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.firstname, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.lastname, {
            label: 'Nom de famille'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.isWoman, {
            label: 'Je suis'
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
        <a href="{{ path('cgu') }}" target="_blank">Lire les conditions d'utilisation</a>
        {{ form_row(registrationForm.agreeTerms, {
            label: "J'ai lu et j'accepte ces conditions"
        }) }}

        <button type="submit" class="third-button">Créer mon compte</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}
